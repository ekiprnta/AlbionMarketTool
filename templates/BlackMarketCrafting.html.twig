{% extends 'layout.html.twig' %}

{% block content %}
    <div class="card mt-3">
        <div class="card-body">
            <div class="row">
                <div class="col-10">
                    <form action="" method="get">
                        <div class="row">
                            <div class="col-3">
                                <div class="form-group">
                                    <label for="itemCity">Choose the City to Craft</label>
                                    <select name="itemCity" id="itemCity" class="form-control">
                                        <option value="Fort Sterling">Fort Sterling</option>
                                        <option value="Lymhurst">Lymhurst</option>
                                        <option value="Bridgewatch">Bridgewatch</option>
                                        <option value="Martlock">Martlock</option>
                                        <option value="Thetford">Thetford</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-3">
                                <label for="weight">Max. Carry Capacity</label>
                                <input class="form-control"
                                       id="weight"
                                       name="weight"
                                       type="number">
                            </div>
                            <div class="col-3">
                                <label for="percentage">RRR (Default 24,8%)</label>
                                <input class="form-control"
                                       id="percentage"
                                       max="100"
                                       min="0"
                                       name="rrr"
                                       step="0.1"
                                       type="number">
                            </div>
                            <div class="col-3">
                                <div class="form-group">
                                    <label for="resourceCity">Resource Location (Default: Choosen City)</label>
                                    <select name="resourceCity" id="resourceCity" class="form-control">
                                        <option value="Fort Sterling">Fort Sterling</option>
                                        <option value="" hidden selected>pls select</option>
                                        <option value="Lymhurst">Lymhurst</option>
                                        <option value="Bridgewatch">Bridgewatch</option>
                                        <option value="Martlock">Martlock</option>
                                        <option value="Thetford">Thetford</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-3">
                                <button class="btn btn-primary" type="submit">Calculate</button>
                            </div>
                            <div class="col-3">
                                <div class="form-check">
                                    <input type="radio" class="form-check-input" name="order" id="buyOrder" value="1">
                                    <label class="form-check-label" for="buyOrder">Insta buy Resources</label>
                                </div>
                            </div>
                            <div class="col-3">
                                <div class="form-check">
                                    <input type="radio" class="form-check-input" name="order" id="sellOrder" value="2"
                                           checked>
                                    <label class="form-check-label" for="sellOrder">Buy Order Resources</label>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="row">
                {% if alertMessage is not null %}
                    <div class="alert alert-danger">{{ alertMessage }}</div>
                {% endif %}
            </div>
        </div>
    </div>
    {% for weaponGroupName, weaponGroup in dataArray %}
        <div class="card mt-3">
            <div class="card-body">
                <div class="card-title">
                    <h3> {{ weaponGroupName }}</h3>
                </div>
                <table class="table table-sm">
                    <thead class="thead-default">
                    <tr>
                        <th>Tier</th>
                        <th>Name</th>
                        <th>Price {{ infoService.getPrimResource(weaponGroupName) }}</th>
                        <th>Price Age</th>
                        <th>Amount {{ infoService.getPrimResource(weaponGroupName) }}</th>
                        <th>Price {{ infoService.getSecResource(weaponGroupName) }}</th>
                        <th>Price Age</th>
                        <th>Amount {{ infoService.getSecResource(weaponGroupName) }}</th>
                        <th>Price</th>
                        <th>Price Age</th>
                        <th>Amount Crafted</th>
                        <th>Amount Books</th>
                        <th>Books Full Price</th>
                        <th>Books Empty Price</th>
                        <th>Profit when rrr: {{ rrr }}</th>
                        <th>Weight Items</th>
                        <th>Weight Resources</th>
                        <th>Profit/Weight</th>
                        <th>Info</th>
                    </tr>
                    </thead>
                    <tbody class="text-right">
                    {# @var item \MZierdt\Albion\Entity\BlackMarketCraftingEntity #}
                    {% for item in weaponGroup %}
                        {% if item.itemSellOrderPrice != 0 %}
                            <tr class="bg-{{ item.colorGrade }} bg-{{ item.getPrice }}">
                                <td class="text-left tier-{{ item.tierColor }} tier">{{ item.tier }}</td>
                                <td>{{ item.realName }}</td>
                                <td>{{ item.primarySellOrderPrice|number_format }}</td>
                                <td {% if item.primaryPriceAge > 720 %} class="bg-D" {% endif %}>
                                    {{ item.primaryPriceAge|number_format }} min
                                </td>
                                <td>{{ item.primaryTotalAmount|number_format }}</td>
                                <td>{{ item.secondarySellOrderPrice|number_format }}</td>
                                <td {% if item.secondaryPriceAge > 720 %} class="bg-D" {% endif %}>
                                    {{ item.secondaryPriceAge|number_format }} min
                                </td>
                                <td>{{ item.secondaryTotalAmount|number_format }}</td>
                                <td>{{ item.itemSellOrderPrice|number_format }}</td>
                                <td {% if item.itemPriceAge > 1440 %} class="bg-D" {% endif %}>
                                    {{ item.itemPriceAge|number_format }} min
                                </td>
                                <td>{{ item.amount|number_format }}</td>
                                <td>{{ item.amountBooks|round(1,'ceil') }}</td>
                                <td>{{ item.getFullSellOrderPrice|number_format }}</td>
                                <td>{{ item.getEmptySellOrderPrice|number_format }}</td>
                                <td>{{ item.percentageProfit|number_format }}</td>
                                <td>{{ item.totalWeightItems|number_format }}</td>
                                <td>{{ item.totalWeightResources|number_format }}</td>
                                <td>{{ item.weightProfitQuotient|number_format }}</td>
                                <td>
                                    <button type="button" class="btn btn-primary" data-toggle="modal"
                                            data-target="#{{ weaponGroupName }}">
                                        more Info
                                    </button>
                                </td>
                            </tr>
                        {% endif %}
                        <div class="modal fade bd-example-modal-lg" id="{{ weaponGroupName }}" tabindex="-1"
                             aria-labelledby="exampleModalLabel"
                             aria-hidden="true">
                            <div class="modal-dialog bg-dark">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title"
                                            id="exampleModalLabel">{{ item.realName }}</h5> {# todo make it look better #}
                                    </div>
                                    <div class="modal-body">
                                        <div class="card">
                                            <div class="card-body">
                                                <div class="card-title"><h4>Item Info</h4></div>
                                                <div class="d-flex flex-column">
                                                    <div class="badge-info badge standard-badge">
                                                        tier: {{ item.tier }}</div>
                                                    <div class="badge-info badge standard-badge">
                                                        name: {{ item.name }}</div>
                                                    <div class="badge-info badge standard-badge">
                                                        weaponGroup: {{ item.weaponGroup }}</div>
                                                    <div class="badge-info badge standard-badge">
                                                        realName: {{ item.realName }}</div>
                                                    <div class="badge-info badge standard-badge">
                                                        itemSellOrderPrice: {{ item.itemSellOrderPrice|number_format }}
                                                        Silver
                                                    </div>
                                                    <div class="badge-info badge standard-badge">
                                                        fameAmount: {{ item.fameAmount|number_format }}</div>
                                                    <div class="badge-info badge standard-badge">
                                                        itemWeight: {{ item.itemWeight|number_format }}kg
                                                    </div>
                                                    <div class="badge-info badge standard-badge">
                                                        amount: {{ item.amount|number_format }}</div>
                                                    <div class="badge-info badge standard-badge">
                                                        itemPriceAge: {{ item.itemPriceAge }}min
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="card">
                                            <div class="card-body">
                                                <div class="card-title"><h4>Primär
                                                        Resource {{ item.primaryResource }}</h4>
                                                </div>
                                                <div class="d-flex flex-column">
                                                    <div class="badge-info badge standard-badge">
                                                        primaryResource: {{ item.primaryResource }}</div>
                                                    <div class="badge-info badge standard-badge">
                                                        primaryResourceAmount: {{ item.primaryResourceAmount|number_format }}
                                                        Silver
                                                    </div>
                                                    <div class="badge-info badge standard-badge">
                                                        primarySellOrderPrice: {{ item.primarySellOrderPrice|number_format }}
                                                        Silver
                                                    </div>
                                                    <div class="badge-info badge standard-badge">
                                                        primaryBuyOrderPrice: {{ item.primaryBuyOrderPrice|number_format }}
                                                        Silver
                                                    </div>
                                                    <div class="badge-info badge standard-badge">
                                                        primaryPriceAge: {{ item.primaryPriceAge }}min
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        {% if item.secondaryResource is not null %}
                                            <div class="card">
                                                <div class="card-body">
                                                    <div class="card-title"><h4>Secondary
                                                            Resource {{ item.secondaryResource }}</h4></div>
                                                    <div class="d-flex flex-column">
                                                        <div class="badge-info badge standard-badge">
                                                            secondaryResource: {{ item.secondaryResource }}</div>
                                                        <div class="badge-info badge standard-badge">
                                                            secondaryResourceAmount: {{ item.secondaryResourceAmount|number_format }}
                                                            Silver
                                                        </div>
                                                        <div class="badge-info badge standard-badge">
                                                            secondarySellOrderPrice: {{ item.secondarySellOrderPrice|number_format }}
                                                            Silver
                                                        </div>
                                                        <div class="badge-info badge standard-badge">
                                                            secondaryBuyOrderPrice: {{ item.secondaryBuyOrderPrice|number_format }}
                                                            Silver
                                                        </div>
                                                        <div class="badge-info badge standard-badge">
                                                            resourceWeight: {{ item.resourceWeight }}kg
                                                        </div>
                                                        <div class="badge-info badge standard-badge">
                                                            secondaryPriceAge: {{ item.secondaryPriceAge }}min
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        {% endif %}
                                        <div class="card">
                                            <div class="card-body">
                                                <div class="card-title"><h4>Journal Info</h4></div>
                                                <div class="d-flex flex-column">
                                                    <div class="badge-info badge standard-badge">
                                                        journalName: {{ item.journalName }}</div>
                                                    <div class="badge-info badge standard-badge">
                                                        fameToFill: {{ item.fameToFill }}</div>
                                                    <div class="badge-info badge standard-badge">
                                                        fullSellOrderPrice: {{ item.fullSellOrderPrice }}</div>
                                                    <div class="badge-info badge standard-badge">
                                                        emptySellOrderPrice: {{ item.emptySellOrderPrice }}</div>
                                                    <div class="badge-info badge standard-badge">
                                                        emptyBuyOrderPrice: {{ item.emptyBuyOrderPrice }}</div>
                                                    <div class="badge-info badge standard-badge">
                                                        amountBooks: {{ item.amountBooks|number_format }}</div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="card">
                                            <div class="card-body">
                                                <div class="card-title"><h4>Miscellaneous</h4></div>
                                                <div class="d-flex flex-column">
                                                    <div class="badge-info badge standard-badge">
                                                        percentageProfit: {{ item.percentageProfit|number_format }}
                                                        Silver
                                                    </div>
                                                    <div class="badge-info badge standard-badge">
                                                        totalWeightItems: {{ item.totalWeightItems|number_format }}kg
                                                    </div>
                                                    <div class="badge-info badge standard-badge">
                                                        totalWeightResources: {{ item.totalWeightResources|number_format }}
                                                        kg
                                                    </div>
                                                    <div class="badge-info badge standard-badge">
                                                        WeightProfitQuotient: {{ item.WeightProfitQuotient|number_format }}
                                                        s/kg
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    {% endfor %}
{% endblock %}

