{% extends 'layout.html.twig' %}

{% block content %}
    <div class="card mt-3">
        <div class="card-body">
            <div class="row">
                <div class="col-10">
                    <form action="" method="get">
                        <div class="row">
                            <div class="col-3">
                                <div class="form-group">
                                    <label for="itemCity">Choose the City to Refine</label>
                                    <select name="itemCity" id="itemCity" class="form-control">
                                        <option value="Fort Sterling">Fort Sterling</option>
                                        <option value="Lymhurst">Lymhurst</option>
                                        <option value="Bridgewatch">Bridgewatch</option>
                                        <option value="Martlock">Martlock</option>
                                        <option value="Thetford">Thetford</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-2">
                                <label for="craftingFee">
                                    Crafting Fee / 100 Nutrition
                                </label>
                                <input class="form-control"
                                       id="craftingFee"
                                       max="9999"
                                       min="0"
                                       name="craftingFee"
                                       step="1"
                                       type="number">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-3">
                                <button class="btn btn-primary" type="submit">Calculate</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="row mt-3">
                {% if alertMessage is not null %}
                    <div class="alert alert-danger standard-alert">{{ alertMessage }}</div>
                {% endif %}
            </div>
        </div>
    </div>
    <div class="card mt-3">
        <div class="card-body">
            <div class="card-title">
                <h3> ?PH Resource</h3>
            </div>
            <table class="table table-sm table-bordered align-middle">
                <thead class="thead-default">
                <tr>
                    <th>Tier</th>
                    <th>Name</th>
                    <td>Crafting Fee</td>
                    <td>...</td>
                </tr>
                </thead>
                <tbody class="text-right">
                {% for bmcEntity in weaponGroup %}
                    {% if bmcEntity.item.sellOrderPrice != 0 %}
                        <tr>
                            <td>Tier</td>
                            <td>Name</td>
                            <td>Crafting Fee</td>
                            <td></td>
                        </tr>
                    {% endif %}
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

